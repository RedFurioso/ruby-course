class C3DFigure

  def initialize(height)
    @height = height
  end

  def volume
    @vol = @area * @height
  end
end

class Rectangle < C3DFigure

  def initialize(length, width, height)
    super(height)
    @length = length
    @width = width
    @area = @length * @width
  end
end

class Circle < C3DFigure

  def initialize(radius, height)
    super(height)
    @radius = radius
    @area = Math::PI * (@radius ** 2)
  end
end
